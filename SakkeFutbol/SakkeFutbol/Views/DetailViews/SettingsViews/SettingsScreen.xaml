<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SakkeFutbol.Views.DetailViews.SettingsViews.SettingsScreen">
    
    <StackLayout Orientation="Vertical">
        <StackLayout>
            <Label x:Name="lbl_NoInternet" HorizontalTextAlignment="Center" TextColor="White" BackgroundColor="Red" />    
        </StackLayout>
        <StackLayout  x:Name="MainLayout">
            <StackLayout.Padding>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="iOs">10,20,10,20</On>
                    <On Platform="Android">10,0,10,20</On>
                </OnPlatform>
            </StackLayout.Padding>
        </StackLayout>
    </StackLayout>
</ContentPage>